
<h1>Learning Together</h1>


<% @blogs.each do |blog| %>
<div class="large-4 columns">
	<div class="panel">
		<%= image_tag blog.image %>
		<h5 class="blog-image-title"><span><%= link_to blog.title, blog %></span></h5>
		<p><%= blog.description %></p>
		
	</div>
	<p><%= raw blog.tag_list.map { |t| link_to t, tag_path(t)}.join(', ') %></p>
	<%= link_to 'Edit', edit_blog_path(blog) %>
    <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
    
    
<% end %>


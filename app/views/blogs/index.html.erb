
<h1>Learning Together</h1>

<div class="row collapse">
	<%= form_tag root_path, :method => 'get' do%>
        <div class="small-10 columns">
          <%= text_field_tag :search, params[:search], :placeholder=>"Search" %>
        </div>
        <div class="small-2 columns">
          <%= submit_tag "Search", :class=>"button postfix", :name => nil%>
        </div>
         <% end %>
 </div>


<% if user_signed_in?%>
	<%= link_to 'New Blog', new_blog_path, :class => "button" %>
<% end %>
<% unless params[:search]%>
<% if @blogs.previous_page%>
	<%= link_to "Previous", params.merge(:page => @blogs.previous_page) %>
<% end %>
<% if @blogs.next_page%>
	<%= link_to "Next", params.merge(:page => @blogs.next_page) %>
<% end %>
<% end %>
<hr />
<%# will_paginate @blogs, :class => "pagination" %><br />

<% @blogs.each do |blog| %>

<div class="large-4 columns">
	<%= link_to blog do %>
	<div class="panel">
		<%= image_tag blog.image %>
		<h5 class="blog-image-title"><span><%= blog.title %><span class='spacer'></span><br/><small>:<%= blog.description %></small></span></h5>
	</div>
	<% end %>
	<p><%= blog.tag_list.map { |t| link_to t, tag_path(t)}.join(', ').html_safe %></p>
	<% if user_signed_in?%>
		<%= link_to 'Edit', edit_blog_path(blog) %>
	    <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
	<% end %>
</div>
   
    
<% end %>

    
    </div>
    <br />
			   
